- if @company.complete_profile?
    h3.header.title-edit-profile-company
      | Edit Profile Information
      hr
- else
    h3.header.title-edit-profile-company
      | COMPANY PROFILE
      hr

.row
  .col.s12
    .text-title-company-profile
      strong Company: 
      span.text-thin = @company.name
    .text-title-company-profile
      strong Email: 
      span.text-thin = @company.email
      hr

= nested_form_for(@company, url: company_path) do |f|
  = f.hidden_field :name
  = f.hidden_field :email
  = render 'shared/errors_messages', object: f.object

  .row
    .col.s12
      .col.s6
        .file-field
          .btn.btn-file-company-profile
            span File
            = f.file_field :logo
          .file-path-wrapper
            input.file-path.validate type="text" placeholder="Company Logo"

        .input-field
          = f.text_field :website, class:"validate"
          = f.label :website, 'Company Website', class: "label-sign-up-company"

        .input-field
          = f.select :category_id, Category.all.collect {|p| [ p.name, p.id ] }, class:'validate'
          = f.label :category_id, 'Industry', class: "label-sign-up-company"

        .input-field
          = f.text_area :description, class:'materialize-textarea validate', rows:1
          = f.label :description, 'Company Description', class: "label-sign-up-company"

      .col.s6
        .input-field.margin-top-field-text
          = f.fields_for :contacts do |c|  
            = c.text_field :first_name, class:"validate"
            = c.label :first_name, 'Contact Name', class: "label-sign-up-company"

        .input-field
          = f.text_field :team_members, type: 'number', min:'0', class:"validate"
          = f.label :team_members, '# of team members', class: "label-sign-up-company"

        .input-field
          = f.text_field :tax_id, class:'validate'
          = f.label :tax_id, class: "label-sign-up-company"

        .input-field
          = f.text_field :address, class:'materialize-textarea validate', rows:2
          = f.label :address, class: "label-sign-up-company"
                            
        = f.fields_for :pictures do |p|
          .col.s12
            .col.s1.center
              = p.link_to_remove class:'btn-floating waves-effect waves-light red'
                i class="large material-icons" delete
            .col.s2.center
              = p.check_box :default, {}, 'true', 'false'
              = p.label :default
            .col.s2
              = p.file_field :file
              = p.hidden_field :id
          br
          br
        = f.link_to_add "Add a Picture", :pictures, class:'waves-effect waves-light btn btn-picture-company-profile'
  .actions
    .col
      button.btn-large.waves-effect.waves-light.btn-company-profile-submit type='submit'
        span Complete your Profile